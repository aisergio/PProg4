<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SplitMenuButton?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="geomate.src.geomate.controller.MainController">
    <top>
        <HBox alignment="TOP_LEFT" spacing="10" BorderPane.alignment="TOP_LEFT">
            <SplitMenuButton fx:id="botonPerfil" text=" " style="-fx-background-color: #FFA500; -fx-text-fill: white;">
                <items>
                    <MenuItem fx:id="opcionInstrucciones" text="Instrucciones" />
                    <MenuItem fx:id="opcionComodines" text="Comodines" />
                </items>
            </SplitMenuButton>
        </HBox>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="10" BorderPane.alignment="CENTER">
            <Text text="GEOMATE" style="-fx-font-family: 'Computerfont'; -fx-font-size: 70px; -fx-font-weight: bold; -fx-fill: #37474F;" />
            <Text text="APRENDE GEOMETRÍA Y MATEMÁTICAS DE FORMA DIVERTIDA" style="-fx-font-family: 'Futura'; -fx-font-size: 12px; -fx-font-weight: bold; -fx-fill: #37474F;" />
            <Button fx:id="botonDesafios" text="INICIAR DESAFÍO" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
        </VBox>
    </center>
    <padding>
        <Insets top="15" bottom="15" right="15" left="15"/>
    </padding>
</BorderPane>